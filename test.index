

<button id="btnPlay">音を鳴らす</button>
<audio id="audioTest" src="correct.mp3" preload="auto"></audio>
<script>
document.getElementById("btnPlay").addEventListener("click", () => {
  const audio = document.getElementById("audioTest");
  audio.currentTime = 0;
  audio.play().then(() => {
    console.log("再生OK");
  }).catch(e => {
    console.log("再生エラー:", e);
  });
});
</script>

